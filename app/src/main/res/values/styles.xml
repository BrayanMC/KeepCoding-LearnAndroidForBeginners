<resources>

    <style name="BaccusTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/BaccusActionBar</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.DarkActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="WineRating" parent="android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/copa_rating</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">32dp</item>
    </style>

    <style name="WineTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">5dip</item>
    </style>

    <style name="WineSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/special_color</item>
        <item name="android:paddingTop">5dip</item>
    </style>

    <style name="WineText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">5dip</item>
    </style>

    <style name="WineNotes" parent="WineText">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BaccusActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/baccus</item>
        <item name="background">@color/baccus</item>
    </style>
</resources>
